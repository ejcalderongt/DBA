dbo.producto_bodega ON dbo.producto_bodega.IdProductoBodega = dbo.trans_pe_det.IdProductoBodega INNER JOIN
dbo.producto ON dbo.producto_bodega.IdProducto = dbo.producto.IdProducto LEFT OUTER JOIN
