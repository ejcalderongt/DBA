
/****** #AT20260115 Se agrego cantidades por presentacion   Script Date: 15/01/2026 01:23:53 ******/
ALTER VIEW [dbo].[VW_Conteo_By_Operador]
AS
SELECT trans_inv_ciclico.idinventarioenc, 
	   dbo.Nombre_Completo_Ubicacion(trans_inv_ciclico.IdUbicacion, trans_inv_ciclico.IdBodega) AS Ubicacion, 
	   IdStock, lic_plate,
	   producto.codigo AS Codigo, producto.codigo_barra AS CodigoBarra, producto.nombre AS Nombre, 
	   CONCAT(operador.nombres,' ', operador.apellidos) AS Operador,
	   unidad_medida.Nombre AS UmBas,
	   ISNULL(producto_presentacion.nombre,'') AS Presentacion,
	   trans_inv_ciclico.cant_stock AS Teorico_UmBas, 
	   SUM(trans_inv_ciclico.cantidad) AS Conteo_UmBas,	
	   IIF(producto_presentacion.Factor <> 0, trans_inv_ciclico.cant_stock / producto_presentacion.Factor, 0) AS Teorico_Pres,
	   SUM(IIF(producto_presentacion.Factor <> 0, trans_inv_ciclico.cantidad / producto_presentacion.Factor, 0)) AS Conteo_Pres
FROM   trans_inv_ciclico INNER JOIN
       producto_bodega ON trans_inv_ciclico.IdProductoBodega = producto_bodega.IdProductoBodega INNER JOIN
	   unidad_medida ON unidad_medida.IdUnidadMedida = trans_inv_ciclico.IdUnidadMedida INNER JOIN
       producto ON producto_bodega.IdProducto = producto.IdProducto LEFT OUTER JOIN
       operador ON trans_inv_ciclico.idoperador = operador.IdOperador
	   LEFT JOIN producto_presentacion ON producto_presentacion.IdPresentacion = trans_inv_ciclico.IdPresentacion
GROUP BY trans_inv_ciclico.idinventarioenc, operador.nombres, producto.codigo, producto.codigo_barra, 
         producto.nombre, trans_inv_ciclico.cant_stock, trans_inv_ciclico.IdUbicacion, 
         trans_inv_ciclico.IdBodega, operador.apellidos, IdStock, lic_plate, unidad_medida.Nombre, producto_presentacion.nombre, producto_presentacion.factor
GO


ALTER VIEW [dbo].[VW_Conteo_By_Operador]
AS
SELECT       trans_inv_ciclico.idinventarioenc, 
	dbo.Nombre_Completo_Ubicacion(trans_inv_ciclico.IdUbicacion, trans_inv_ciclico.IdBodega) AS Ubicacion,
	producto.codigo AS Codigo, producto.codigo_barra AS CodigoBarra, producto.nombre AS Nombre, 
	CONCAT(operador.nombres,' ', operador.apellidos) AS Operador,
	trans_inv_ciclico.cant_stock AS Teorico, 
	SUM(trans_inv_ciclico.cantidad) AS Conteo						 
FROM            trans_inv_ciclico INNER JOIN
                         producto_bodega ON trans_inv_ciclico.IdProductoBodega = producto_bodega.IdProductoBodega INNER JOIN
                         producto ON producto_bodega.IdProducto = producto.IdProducto LEFT OUTER JOIN
                         operador ON trans_inv_ciclico.idoperador = operador.IdOperador
GROUP BY trans_inv_ciclico.idinventarioenc, operador.nombres, producto.codigo, producto.codigo_barra, producto.nombre, trans_inv_ciclico.cant_stock, trans_inv_ciclico.IdUbicacion, 
                         trans_inv_ciclico.IdBodega, operador.apellidos
GO
