--#GT04122025 tabla para guardar motivos de pausar o anular un pedido segun el estado.

CREATE TABLE [dbo].[verificacion_motivo](
	[IdMotivo] [int] NOT NULL,
	[IdEstado] [int] NOT NULL,
	[descripcion] [nvarchar](50) NOT NULL,
	[user_agr] [nvarchar](10) NULL,
	[fec_agr] [datetime] NULL,
	[activo] [bit] NULL,
 CONSTRAINT [PK_verificacion_motivo] PRIMARY KEY CLUSTERED 
(
	[IdMotivo] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY]
GO

ALTER TABLE [dbo].[verificacion_motivo] ADD  CONSTRAINT [DF_verificacion_motivo_fec_agr]  DEFAULT (getdate()) FOR [fec_agr]
GO

ALTER TABLE [dbo].[verificacion_motivo]  WITH CHECK ADD  CONSTRAINT [FK_verificacion_motivo_verificacion_estado] FOREIGN KEY([IdEstado])
REFERENCES [dbo].[verificacion_estado] ([IdEstado])
GO

ALTER TABLE [dbo].[verificacion_motivo] CHECK CONSTRAINT [FK_verificacion_motivo_verificacion_estado]
GO
