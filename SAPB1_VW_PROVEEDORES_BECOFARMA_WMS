/****** Object:  View [dbo].[VW_PROVEEDORES_BECOFARMA_WMS]    Script Date: 25/01/2024 16:17:12 ******/
SET ANSI_NULLS ON
GO

SET QUOTED_IDENTIFIER ON
GO

CREATE VIEW [dbo].[VW_PROVEEDORES_BECOFARMA_WMS]
AS
SELECT T0.CARDCODE AS CODIGO,
T0.CARDNAME AS NOMBRE_COMERCIAL ,
T0.Phone1,
ISNULL(T1.FirstName,'ND') AS CONTACTO,  
T0.u_nit As NIT, 
T0.Address As DIRECCION, 
T0.E_Mail, T0.GroupCode
FROM OCRD T0 LEFT JOIN OCPR T1 ON T0.CardCode = T1.CardCode
WHERE (T0.CARDTYPE = 'S' and T0.validFor = 'Y' )
GO
