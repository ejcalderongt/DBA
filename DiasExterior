-- =============================================
-- Author:		Carolina Fuentes
-- Create date: 16-02-2021
-- Description:	Función para obtener los días exteriores del cliente recibiendo los parámentros de IdCliente,IdFamilia, IdClasificacion
-- =============================================
CREATE FUNCTION DiasExterior
(
	-- Add the parameters for the function here
	@IdCliente INT,
	@IdFamilia INT, 
	@IdClasificacion INT
)
RETURNS INT
AS
BEGIN
	DECLARE @resultado INT
	-- Declare the return variable here
	
	SELECT @resultado = t.Dias_Exterior
	FROM cliente_tiempos t 
	WHERE (t.IdCliente=@IdCliente) 
	And t.IdClasificacion = @IdClasificacion
	And t.IdFamilia = @IdFamilia

	RETURN @resultado;

END
GO
